<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fyp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/galway_logo"
        android:label="Galway City Museum"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VideoActivity"
            android:parentActivityName=".DisplayARCameraActivity">
        </activity>
        <activity
            android:name=".PostboxInfoActivity"
            android:label="@string/title_activity_postbox_more_info"
            android:parentActivityName=".DisplayARCameraActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fyp.DisplayARCameraActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/gradient_2" />

        <activity
            android:name=".BowlInfoActivity"
            android:label="@string/title_activity_more_info_bowl"
            android:parentActivityName=".DisplayARCameraActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EndQuizActivity" />
        <activity android:name=".StartQuizActivity" />
        <activity
            android:name=".TriviaActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".FloorPlanActivity"
            android:label="@string/title_activity_maps"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fyp.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayARCameraActivity"
            android:label="@string/title_activity_display_arcamera"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>